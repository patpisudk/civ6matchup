<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Match #<%= @match.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/matches" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @match.owner %>
          <a href="/matches/<%= @match.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit match
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @match.owner %>
          <a href="/delete_match/<%= @match.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete match
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Map
      </dt>
      <dd>
        <% if @match.map.present? %>
          <a href="/maps/<%= @match.map_id %>">
            <%= @match.map.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Faction01
      </dt>
      <dd>
        <% if @match.faction01.present? %>
          <a href="/factions/<%= @match.faction01_id %>">
            <%= @match.faction01.civ_id %>
          </a>
        <% end %>
      </dd>

      <dt>
        Faction02
      </dt>
      <dd>
        <%= @match.faction02_id %>
      </dd>

      <dt>
        Faction03
      </dt>
      <dd>
        <%= @match.faction03_id %>
      </dd>

      <dt>
        Faction04
      </dt>
      <dd>
        <%= @match.faction04_id %>
      </dd>

      <dt>
        Faction05
      </dt>
      <dd>
        <%= @match.faction05_id %>
      </dd>

      <dt>
        Faction06
      </dt>
      <dd>
        <%= @match.faction06_id %>
      </dd>

      <dt>
        Faction07
      </dt>
      <dd>
        <%= @match.faction07_id %>
      </dd>

      <dt>
        Faction08
      </dt>
      <dd>
        <%= @match.faction08_id %>
      </dd>

      <dt>
        Faction09
      </dt>
      <dd>
        <%= @match.faction09_id %>
      </dd>

      <dt>
        Faction10
      </dt>
      <dd>
        <%= @match.faction10_id %>
      </dd>

      <dt>
        Faction11
      </dt>
      <dd>
        <%= @match.faction11_id %>
      </dd>

      <dt>
        Faction12
      </dt>
      <dd>
        <%= @match.faction12_id %>
      </dd>

      <dt>
        Owner
      </dt>
      <dd>
        <% if @match.owner.present? %>
          <a href="/users/<%= @match.owner_id %>">
            <%= @match.owner.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@match.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@match.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

