<h1>
  Add a new match
</h1>


<hr>

<form action="/create_match" method="post">

  <div class="form-group">
    <label for="map_id">
      Map
    </label>

    <%= select_tag(:map_id, options_from_collection_for_select(Map.all, :id, :name, @match.map_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="faction01_id">
      Faction01
    </label>

    <%= select_tag(:faction01_id, options_from_collection_for_select(Faction.all, :id, :civ_id, @match.faction01_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="faction02_id">
      Faction02
    </label>

    <input type="text" id="faction02_id" name="faction02_id" class="form-control">
