<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Map #<%= @map.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/maps" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/maps/<%= @map.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit map
        </a>
      </div>

      <div class="col">
        <a href="/delete_map/<%= @map.id %>" class="btn btn-block btn-outline-secondary">
          Delete map
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @map.name %>
      </dd>

      <dt>
        Land weight
      </dt>
      <dd>
        <%= @map.land_weight %>
      </dd>

      <dt>
        Water weight
      </dt>
      <dd>
        <%= @map.water_weight %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@map.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@map.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "map_templates/map_matches" %>
  </div>
</div>
