<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All maps
    </h1>

    <a href="/maps/new" class="btn btn-block btn-outline-secondary">
      Add a new map
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "map_templates/maps_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Land weight
        </th>

        <th>
          Water weight
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @maps.each do |map| %>
      <tr>
        <td>
          <%= map.id %>
        </td>

        <td>
          <%= map.name %>
        </td>

        <td>
          <%= map.land_weight %>
        </td>

        <td>
          <%= map.water_weight %>
        </td>

        <td>
          <%= time_ago_in_words(map.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(map.updated_at) %> ago
        </td>

        <td>
          <a href="/maps/<%= map.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @maps, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
