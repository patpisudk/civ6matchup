<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All maps
    </h1>

    <a href="/maps/new" class="btn btn-block btn-outline-secondary">
      Add a new map
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Land weight
        </th>

        <th>
          Water weight
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @maps.each do |map| %>
      <tr>
        <!-- Display map.id start -->
        <td>
          <%= map.id %>
        </td>
        <!-- Display map.id end -->

        <!-- Display map.name start -->
        <td>
          <%= map.name %>
        </td>
        <!-- Display map.name end -->

        <!-- Display map.land_weight start -->
        <td>
          <%= map.land_weight %>
        </td>
        <!-- Display map.land_weight end -->

        <!-- Display map.water_weight start -->
        <td>
          <%= map.water_weight %>
        </td>
        <!-- Display map.water_weight end -->

        <!-- Display map.created_at start -->
        <td>
          <%= time_ago_in_words(map.created_at) %> ago
        </td>
        <!-- Display map.created_at end -->

        <!-- Display map.updated_at start -->
        <td>
          <%= time_ago_in_words(map.updated_at) %> ago
        </td>
        <!-- Display map.updated_at end -->

        <td>
          <a href="/maps/<%= map.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @maps, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
