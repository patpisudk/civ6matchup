<!-- Validation failure messages -->
<% if @faction.present? %>
  <% if @faction.errors.any? %>
    <% @faction.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

