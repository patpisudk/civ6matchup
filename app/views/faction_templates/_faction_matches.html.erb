<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Matches

    <a data-toggle="collapse" href="#faction_matches_new_form">
      Add match
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @faction.matches.each do |match| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/matches/<%= match.id %>">
          <%= match.map_id %>
        </a>
        <!-- Show link end -->

        <!-- Delete link start -->
        <a href="/delete_match_from_faction01/<%= match.id %>">
          Delete
        </a>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="faction_matches_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "faction_templates/faction_matches_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
