<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Factions

    <a data-toggle="collapse" href="#leader_factions_new_form">
      Add faction
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @leader.factions.each do |faction| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/factions/<%= faction.id %>">
          <%= faction.civ_id %>
        </a>

        <a href="/delete_faction_from_leader/<%= faction.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="leader_factions_new_form">
        <%= render partial: "leader_templates/leader_factions_new_form" %>
      </div>
    </div>

  </ul>
</div>
