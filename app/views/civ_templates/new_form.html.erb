<h1>
  Add a new civ
</h1>


<hr>

<form action="/create_civ" method="post">

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control">
  </div>

  <div class="form-group">
    <label for="unique_unit">
      Unique unit
    </label>

    <input type="text" id="unique_unit" name="unique_unit" class="form-control">
  </div>

  <div class="form-group">
    <label for="unique_infrastructure">
      Unique infrastructure
    </label>

    <input type="text" id="unique_infrastructure" name="unique_infrastructure" class="form-control">
  </div>

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <textarea id="description" name="description" class="form-control" rows="3"></textarea>
  </div>

  <div class="form-group">
    <label for="civ_ability">
      Civ ability
    </label>

    <input type="text" id="civ_ability" name="civ_ability" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create civ
  </button>
</form>

<hr>

<a href="/civs">
  Go back
</a>
