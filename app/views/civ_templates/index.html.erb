<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All civs
    </h1>

    <a href="/civs/new" class="btn btn-block btn-outline-secondary">
      Add a new civ
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "civ_templates/civs_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Unique unit
        </th>

        <th>
          Unique infrastructure
        </th>

        <th>
          Description
        </th>

        <th>
          Civ ability
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @civs.each do |civ| %>
      <tr>
        <!-- Display civ.id start -->
        <td>
          <%= civ.id %>
        </td>
        <!-- Display civ.id end -->

        <!-- Display civ.name start -->
        <td>
          <%= civ.name %>
        </td>
        <!-- Display civ.name end -->

        <!-- Display civ.unique_unit start -->
        <td>
          <%= civ.unique_unit %>
        </td>
        <!-- Display civ.unique_unit end -->

        <!-- Display civ.unique_infrastructure start -->
        <td>
          <%= civ.unique_infrastructure %>
        </td>
        <!-- Display civ.unique_infrastructure end -->

        <!-- Display civ.description start -->
        <td>
          <%= civ.description %>
        </td>
        <!-- Display civ.description end -->

        <!-- Display civ.civ_ability start -->
        <td>
          <%= civ.civ_ability %>
        </td>
        <!-- Display civ.civ_ability end -->

        <!-- Display civ.created_at start -->
        <td>
          <%= time_ago_in_words(civ.created_at) %> ago
        </td>
        <!-- Display civ.created_at end -->

        <!-- Display civ.updated_at start -->
        <td>
          <%= time_ago_in_words(civ.updated_at) %> ago
        </td>
        <!-- Display civ.updated_at end -->

        <td>
          <a href="/civs/<%= civ.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @civs, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
