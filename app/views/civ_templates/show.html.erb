<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Civ #<%= @civ.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/civs" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/civs/<%= @civ.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit civ
        </a>
      </div>

      <div class="col">
        <a href="/delete_civ/<%= @civ.id %>" class="btn btn-block btn-outline-secondary">
          Delete civ
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @civ.name %>
      </dd>

      <dt>
        Unique unit
      </dt>
      <dd>
        <%= @civ.unique_unit %>
      </dd>

      <dt>
        Unique infrastructure
      </dt>
      <dd>
        <%= @civ.unique_infrastructure %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @civ.description %>
      </dd>

      <dt>
        Civ ability
      </dt>
      <dd>
        <%= @civ.civ_ability %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@civ.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@civ.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "civ_templates/civ_factions" %>
  </div>
</div>
