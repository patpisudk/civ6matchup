<h1>
  Edit civ #<%= @civ.id %>
</h1>

<hr>

<!-- Form civ start -->
<form action="/update_civ/<%= @civ.id %>" method="post">
<!-- Form civ end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @civ.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for unique_unit start -->
  <div class="form-group">
    <label for="unique_unit">
      Unique unit
    </label>

    <!-- Input for unique_unit start -->
    <input type="text" id="unique_unit" name="unique_unit" class="form-control" value="<%= @civ.unique_unit %>">
    <!-- Input for unique_unit end -->
  </div>
  <!-- Label and input for unique_unit end -->

  <!-- Label and input for unique_infrastructure start -->
  <div class="form-group">
    <label for="unique_infrastructure">
      Unique infrastructure
    </label>

    <!-- Input for unique_infrastructure start -->
    <input type="text" id="unique_infrastructure" name="unique_infrastructure" class="form-control" value="<%= @civ.unique_infrastructure %>">
    <!-- Input for unique_infrastructure end -->
  </div>
  <!-- Label and input for unique_infrastructure end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <textarea id="description" name="description" class="form-control" rows="3"><%= @civ.description %></textarea>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for civ_ability start -->
  <div class="form-group">
    <label for="civ_ability">
      Civ ability
    </label>

    <!-- Input for civ_ability start -->
    <input type="text" id="civ_ability" name="civ_ability" class="form-control" value="<%= @civ.civ_ability %>">
    <!-- Input for civ_ability end -->
  </div>
  <!-- Label and input for civ_ability end -->

  <button class="btn btn-block btn-outline-secondary">
    Update civ
  </button>
</form>

<hr>

<a href="/civs">
  Go back
</a>
